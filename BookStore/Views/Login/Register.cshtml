
@model BookStore.Models.Entities.KhachHang

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrap">
    <div class="main-content full-width no-borders login-page">
        <div class="block-wrap half">
            <div class="form-wrap">
                <h2>Đăng nhập</h2>
                <form action="/account/authenticate" method="post" class="form-horizontal login-form">

                    <input type="hidden" name="csrfToken" value="gvLG7bfAiRzWz7WvYvOcQSfrxozxi2/v1EFC1XMAAAABAAAAAFkcXUdyYXcAAAAAq9EKup9RHViAXxPcX6iU">

                    <div class="form-group required ">
                        <label class="control-label" for="username">Tên đăng nhập</label>
                        <div class="form-control-wrap">
                            <input type="text" value="" name="username" id="username" class="form-control" required="">
                        </div>
                    </div>

                    <div class="form-group required ">
                        <label class="control-label" for="password">Mật khẩu</label>
                        <div class="form-control-wrap">
                            <input type="password" value="" name="password" id="password" class="form-control" autocomplete="off" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-btn-wrap form-control-wrap">
                            <button class="btn btn-primary" type="submit">Đăng nhập</button>
                        </div>
                    </div>

                    <p class="text"><a href="/account/forgetpassword">Quên mật khẩu?</a></p>
                </form>
            </div>
        </div>

        <div class="block-wrap half">
            <div class="form-wrap">
                <h2>Đăng ký</h2>
                <form action="/account/register" method="post" class="form-horizontal registration-form">

                    <input type="hidden" name="csrfToken" value="ggchjSf++XGomyHv3sR1Na/43pvRR9/9OZCM1OMAAAABAAAAAFkcXUdyYXcAAAAAq9EKup9RHViAXxPcX6iU">

                    <div class="form-group required ">
                        <label class="control-label" for="emailAddress">Email</label>
                        <div class="form-control-wrap">
                            <input type="email" value="" name="emailAddress" id="emailAddress" class="form-control" required="">
                        </div>
                    </div>

                    <div class="form-group required ">
                        <label class="control-label" for="custName">Tên đăng nhập</label>
                        <div class="form-control-wrap">
                            <input type="text" value="" name="custName" id="custName" class="form-control" required="">
                        </div>
                    </div>


                    <div class="form-group required ">
                        <label class="control-label" for="password">Mật khẩu</label>
                        <div class="form-control-wrap">
                            <input type="password" value="" name="password" id="password" class="form-control" autocomplete="off" required="">
                            <div class="help-block">Mật khẩu phải có ít nhất 6 ký tự.</div>
                        </div>
                    </div>

                    <div class="form-group required ">
                        <label class="control-label" for="passwordVerify">Nhập lại mật khẩu</label>
                        <div class="form-control-wrap">
                            <input type="password" value="" name="passwordVerify" id="passwordVerify"
                                    class="form-control" autocomplete="off" required="">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-btn-wrap form-control-wrap">
                            <button class="btn btn-primary" type="submit">Đăng ký</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>