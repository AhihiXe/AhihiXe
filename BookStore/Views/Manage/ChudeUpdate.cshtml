@model BookStore.Models.Entities.ChuDe


@{
    ViewBag.Title = "HomePageManager";
    Layout = "~/Views/Shared/_Layout_Manager.cshtml";
}

<div class="progressbar-heading grids-heading">
    <h2>Chủ đề </h2>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-widget forms-panel">
        <div class="forms">
            <div class="form-grids form-grids-right">
                <div class="widget-shadow " data-example-id="basic-forms">
                    <div class="form-title">
                        <h4>Chỉnh sửa thông tin chủ đề</h4>
                    </div>
                    <div class="form-body">
                        <form class="form-horizontal" action="ChudeUpdate" method="post">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ma, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-sm-9">
@*                                    @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })*@
                                    <input type="number" readonly="readonly"  name="ma" class="form-control" id="inputEmail3" value="@Model.ma">
                                    @Html.ValidationMessageFor(model => model.ma, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.ten, htmlAttributes: new { @class = "control-label col-md-2" })
                                @*<label for="inputPassword3" class="col-sm-2 control-label">Password</label>*@
                                <div class="col-sm-9">
                                    <input type="text" name="ten" class="form-control" id="inputPassword3" placeholder="Tên chủ đề" value="@Model.ten">
                                    @Html.ValidationMessageFor(model => model.ten, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <div class="checkbox">
                                        <label> <input type="checkbox"> Remember me </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-offset-2">
                                <button type="submit" class="btn btn-default w3ls-button value="Save">Cập nhật</button>
                                @*<button type="submit" class="btn btn-default w3ls-button">Sign in</button>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

